 <a href="#latest-jobs"><i class="fas fa-caret-square-down"></i></a>
 <section class="search-sec">
  <div class="container">
      <form action="#" method="post" novalidate="novalidate">
          <div class="row">
              <div class="col-lg-12">
                  <div class="row">
                      <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                          <input type="text" class="form-control search-slt" placeholder="Job">
                      </div>
                      <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                          <input type="text" class="form-control search-slt" placeholder="Sector">
                      </div>
                      <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                          <select class="form-control search-slt" id="exampleFormControlSelect1">
                              <option>Salary</option>
                              <option>50,000</option>
                              <option>40,000</option>
                              <option>30,000</option>
                              <option>25,000</option>
                              <option>20,000</option>
                              <option>18,000</option>
                          </select>
                      </div>
                      <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                          <button type="button" class="search-button">Search</button>
                      </div>
                  </div>
              </div>
          </div>
      </form>
  </div>
</section>
</div>
<div id="latest-jobs">
  <h1>Careers</h1>
    <div class="cards">
      <% @job.last(3).each do |job| %>
        <div class="col-lg-4 col-md-6 col-sm-12 p-3">
          <div class="card job-card">
            <div class="card-body">
              <h4 class="card-title"> <%= job.title %> - <%= job.location %> - <%= job.salary %> </h4>
              <p class="card-text"><%= job.description %></p>
            </div>
            <div class="card-footer text-center bg-white">
              <%= link_to "Apply Now",  jobs_path, class: "btn btn-green hvr-float-shadow"%>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="client-recomendations">
    <h2>What our clients say</h2>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
